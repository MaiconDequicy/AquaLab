<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.EsqueciSenha">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarEsqueciSenha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title=""
        app:navigationIcon="@drawable/arrow_back_24"
        app:navigationIconTint="@color/blue" />

    <TextView
        android:id="@+id/tv_title_recuperar_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recuperar Senha"
        android:textSize="28sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/blue"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarEsqueciSenha"
        app:layout_constraintStart_toStartOf="parent"
       />

    <TextView
        android:id="@+id/tv_subtitle_recuperar_senha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Um link de recuperação de senha será enviado ao seu e-mail cadastrado"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_title_recuperar_senha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        />

    <ImageView
        android:id="@+id/iv_password_key"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/esquecer_senha"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle_recuperar_senha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        android:contentDescription="Ilustração de chave e senha" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutEmailRecuperar"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_password_key"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        android:hint="Insira o seu email"
        app:boxStrokeColor="@color/blue"
        app:cursorColor="@color/blue"
        app:hintTextColor="@color/blue"
        app:startIconDrawable="@drawable/mail_24"
        app:startIconTint="@color/blue"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/campoEmailRecuperar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:fontFamily="@font/poppins"
            android:textColor="@color/blue_700"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/botaoGerarLink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gerar Link"
        android:textSize="16sp"
        android:backgroundTint="@color/blue"
        android:paddingVertical="12dp"
        android:fontFamily="@font/poppins_bold"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/textInputLayoutEmailRecuperar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
