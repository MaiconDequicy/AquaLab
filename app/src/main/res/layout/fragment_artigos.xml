<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.Artigos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewArtigosNoticiasTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Artigos e Notícias"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/textViewArtigosNoticiasSubtitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins"
            android:text="Procure, leia e favorite o que há de mais novo no mundo da água"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/light_gray"
            android:layout_marginBottom="16dp" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchViewArtigos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:queryHint="Busque um novo artigo ou notícia"
            android:background="@drawable/search_view_background"
            android:layout_marginBottom="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewArtigos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:listitem="@layout/item_artigo" />
    </LinearLayout>

</FrameLayout>