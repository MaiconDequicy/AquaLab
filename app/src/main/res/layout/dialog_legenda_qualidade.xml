<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_rounded_bg"
    android:padding="24dp">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppins_bold"
            android:text="Legenda de Qualidade da Ãgua"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/blue" />

    </RelativeLayout>

    <include layout="@layout/item_legenda" android:id="@+id/legenda_otima"/>
    <include layout="@layout/item_legenda" android:id="@+id/legenda_boa"/>
    <include layout="@layout/item_legenda" android:id="@+id/legenda_regular"/>
    <include layout="@layout/item_legenda" android:id="@+id/legenda_ruim"/>
    <include layout="@layout/item_legenda" android:id="@+id/legenda_pessima"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_entendi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins"
        app:cornerRadius="20dp"
        android:text="Entendi" />

</LinearLayout>
    