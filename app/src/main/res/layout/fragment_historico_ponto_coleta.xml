<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarTelaHistoricoPontosSensor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/arrow_back_24"
        app:navigationIconTint="@color/blue"
        app:title="" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewLabelTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Histórico - Ponto de Coleta"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/textViewASubTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins"
                android:text="Veja os dados deste ponto de coleta"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/light_gray"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStatusAtual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="20dp"
                app:strokeColor="@color/cinza_fraco"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="Status Atual"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:text="pH"
                                android:fontFamily="@font/poppins"
                                android:textSize="14sp"
                                android:textColor="#616161"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvValorPH"
                                android:text="7.2"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="20sp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:text="Temp."
                                android:fontFamily="@font/poppins"
                                android:textSize="14sp"
                                android:textColor="#616161"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvValorTemp"
                                android:text="24°C"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="20sp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:text="Qualidade"
                                android:fontFamily="@font/poppins"
                                android:textSize="14sp"
                                android:textColor="#616161"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <View
                                    android:id="@+id/viewIndicadorQualidade"
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:background="@drawable/circle_green"
                                    android:layout_marginEnd="6dp" />

                                <TextView
                                    android:id="@+id/tvStatusQualidade"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Boa"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="20dp"
                app:strokeColor="@color/cinza_fraco"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Período"
                        android:textColor="@color/blue"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip24Horas"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="24 horas"
                            android:textAlignment="center"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/blue"
                            android:textSize="14sp"
                            android:checkable="true"
                            android:checked="true"
                            app:chipBackgroundColor="@android:color/transparent"
                            app:chipStrokeColor="@color/cinza_fraco"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip7Dias"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="4dp"
                            android:text="7 dias"
                            android:textAlignment="center"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/blue"
                            android:textSize="14sp"
                            android:checkable="true"
                            app:chipBackgroundColor="@android:color/transparent"
                            app:chipStrokeColor="@color/cinza_fraco"
                            app:chipStrokeWidth="1dp"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip30Dias"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:checkable="true"
                            android:fontFamily="@font/poppins"
                            android:text="30 dias"
                            android:textAlignment="center"
                            android:textColor="@color/blue"
                            android:textSize="14sp"
                            app:chipBackgroundColor="@android:color/transparent"
                            app:chipStrokeColor="@color/cinza_fraco"
                            app:chipStrokeWidth="1dp" />

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_analiseGraficaHistoricoPublico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:strokeColor="@color/cinza_fraco"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:id="@+id/layoutInternoDash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/labelAnalise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Análise de Dados"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/blue"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/itemAnaliseSensor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sensores - Ponto Coleta"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/light_gray"
                        android:fontFamily="@font/poppins"
                        android:layout_marginBottom="4dp" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>