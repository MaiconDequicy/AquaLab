<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.Inicio">

    <LinearLayout
        android:id="@+id/caixaPrincipalHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        >
        <TextView
            android:id="@+id/boasVindas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olá, Maicon!"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textColor="@color/blue"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            />
        <TextView
            android:id="@+id/descrição"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/light_gray"
            android:text="Confira a qualidade da água em Manaus"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="16dp"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/cinza_fraco"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imagemVisaoDescritiva"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/perigo"
                    android:layout_marginEnd="16dp"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/labelVisaoGeral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visão Geral de Hoje"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/blue"
                        android:fontFamily="@font/poppins_bold"
                        />

                    <TextView
                        android:id="@+id/qtPontos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 pontos em estado crítico"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/light_gray"
                        android:fontFamily="@font/poppins_bold"
                        />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMapas"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/cinza_fraco"
            app:strokeWidth="1dp">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardArtigos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/cinza_fraco"
            app:strokeWidth="1dp">

            <LinearLayout
                android:id="@+id/layoutInternoArtigos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/labelTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artigos Recentes"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/itemPraSubstituirArtigo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - A importancia do pH na água"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/light_gray"
                    android:fontFamily="@font/poppins"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/itemPraSubstituirArtigo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - Novas tecnologias de filtragem"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/light_gray"
                    android:fontFamily="@font/poppins"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDetalhesArtigos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ver Detalhes"
                    android:backgroundTint="@color/blue_700"
                    android:fontFamily="@font/poppins"
                    app:cornerRadius="20dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</FrameLayout>
