<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.Inicio">

    <LinearLayout
        android:id="@+id/caixaPrincipalHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/boasVindas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olá, Maicon!"
            android:textColor="@color/blue"
            android:fontFamily="@font/poppins_bold"
            android:textSize="30sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            />
        <TextView
            android:id="@+id/descrição"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/light_gray"
            android:text="Confira a qualidade da água em Manaus"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/cinza_fraco"
            app:strokeWidth="1dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/imagemVisaoDescritiva"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/perigo"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="13dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/labelVisaoGeral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Visão Geral de Hoje"
                        android:textColor="@color/blue"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="22sp"
                        />

                    <TextView
                        android:id="@+id/qtPontos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="3 pontos em estado crítico"
                        android:textColor="@color/light_gray"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="16sp"
                        />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMapas"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/cinza_fraco"
            app:strokeWidth="1dp"
            >
            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardArtigos"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/cinza_fraco"
            app:strokeWidth="1dp"
            >
            <LinearLayout
                android:id="@+id/layoutInternoArtigos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/labelTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/blue"
                    android:text="Artigos Recentes"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    >
                </TextView>
                <TextView
                    android:id="@+id/itemPraSubstituirArtigo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - A importancia do pH na água"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/light_gray"
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp"
                    >
                </TextView>

                <TextView
                    android:id="@+id/itemPraSubstituirArtigo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - Novas tecnologias de filtragem"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/light_gray"
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp"
                    >
                </TextView>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/botaoCadastrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="15dp"
                    android:textSize="12sp"
                    android:backgroundTint="@color/blue"
                    android:paddingVertical="12dp"
                    android:text="Ver detalhes"
                    android:fontFamily="@font/poppins_bold"
                    app:cornerRadius="32dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</FrameLayout>